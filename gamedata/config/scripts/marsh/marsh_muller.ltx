[logic]
active = walker
combat_ignore = combat_ignore@muller
on_hit = hit@muller

[walker]
path_walk = marsh_muller_walk_way
path_look = marsh_muller_way_look
meet = meet
wounded = wounded@muller
danger = danger_condition
combat_ignore_cond = {-muller_fire =fighting_actor}

[danger_condition]
ignore_distance = 0

[wounded@muller]
hp_state = 30|help_me@help|29|wounded_heavy@help_heavy
hp_state_see = 30|wounded@help_see|29|wounded_heavy@help_heavy
hp_victim = 30|nil|10|nil
hp_cover = 30|true|29|false
hp_fight = 30|true|29|false
syndata = wounded@help
help_dialog = muller_start_dialog

[meet]
use = true
use_wpn = false
abuse = true
meet_talk_enabled = true
meet_dialog = muller_start_dialog
meet_state = 4|{-muller_fire} sit_knee
meet_state_wpn = 4|{-muller_fire} assault
target = actor

[combat_ignore@muller]
combat_ignore_cond = {-muller_fire =fighting_actor}

[hit@muller]
on_info = {=hit_by_actor} %+muller_fire%
