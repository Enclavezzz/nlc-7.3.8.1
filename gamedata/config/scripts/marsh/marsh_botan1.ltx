[logic]
active = walker
danger = danger_condition
combat_ignore = combat_ignore@gig_watch

[walker]
path_walk = marsh_botan_to_gigant_way
path_look = marsh_botan_to_gigant_look
on_info  = {+marsh_botan_ok} walker@to_gigant %=sak_spawn.marsh_monster_botans()%
meet = meet
danger = danger_condition


[walker@to_gigant]
path_walk = marsh_botan_to_gigant_way
path_look = marsh_botan_to_gigant_look
on_signal = marsh_botan_to_gigant_end | walker@look_gigant
meet = no_meet
combat_ignore_cond = {=fighting_dist_ge(5) =fighting_gigant}
danger = danger_condition

[walker@look_gigant]
path_walk = marsh_botan_look_gigant_way
path_look = marsh_botan_look_gigant_look
on_timer = 15000 | %+marsh_botan_to_gigant_end% walker@marsh_end
meet = no_meet
combat_ignore_cond = {=fighting_dist_ge(5) =fighting_gigant}
danger = danger_condition@marsh_end

[walker@marsh_end]
path_walk = marsh_botan_look_gigant_way
path_look = marsh_botan_look_gigant_look
meet = meet@marsh_end
combat_ignore_cond = {=fighting_dist_ge(2) =fighting_gigant}

[meet@marsh_end]
use = true
use_wpn = true
meet_talk_enabled = true
meet_dialog	= marsh_botan1_start_dialog

[combat_ignore@gig_watch]
combat_ignore_cond = {=fighting_dist_ge(5) =fighting_gigant}

[danger_condition]
ignore_distance_corpse = 0
ignore_distance_sound = 0
ignore_distance = 0
danger_inertion_time_grenade = 0
danger_inertion_time_hit = 4000
danger_inertion_time_ricochet = 0
danger_inertion_time_corpse = 0
danger_inertion_time_sound = 0
[danger_condition@marsh_end]
ignore_distance_corpse = 0
ignore_distance_sound = 0
ignore_distance = 1
