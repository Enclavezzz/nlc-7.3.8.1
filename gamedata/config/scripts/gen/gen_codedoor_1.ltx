[logic]
active = ph_door@locked

[ph_door@locked]
locked = true
closed = true
snd_open_start = trader_door_unlock
on_info = {+generators_code_door_unlocked} ph_door@open %=play_snd(device\door_servomotor)%

[ph_door@open]
closed = false
locked = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_timer = 3000| ph_door@locked %=play_snd(device\door_servomotor) -generators_code_door_unlocked%

