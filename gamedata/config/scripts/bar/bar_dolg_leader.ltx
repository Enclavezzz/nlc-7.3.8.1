[logic]
active = walker@voronin
on_death = death

[death]
on_info = %+bar_voronin_dead%

[walker@voronin]
path_walk = bar_dolg_leader_walk
path_look = bar_dolg_leader_look
meet = no_meet
on_actor_dist_le_nvis = 7 | remark@voronin
on_info = {+bar_territory_nodolg_2_hit} walker@enemy %=bar_arena_hit% , {+bar_territory_nodolg_kill} walker@enemy %=bar_arena_hit%

[remark@voronin]
anim = ward
target = actor
snd = bar_dolg_leader_hello
meet = no_meet
on_signal = sound_end| walker@voronin2

[walker@voronin2]
path_walk = bar_dolg_leader_walk
path_look = bar_dolg_leader_look
meet = meet
on_info = {+bar_territory_nodolg_2_hit} walker@enemy %=bar_arena_hit% , {+bar_territory_nodolg_kill} walker@enemy %=bar_arena_hit%

[walker@enemy]
path_walk = bar_dolg_leader_walk
path_look = bar_dolg_leader_look
meet = no_meet

[meet]
use = true
use_wpn = false
abuse = false
victim = 7| actor
victim_wpn = 7| actor