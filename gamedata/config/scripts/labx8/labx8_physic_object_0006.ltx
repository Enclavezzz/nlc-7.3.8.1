[logic]
active = ph_door@locked

[ph_door@locked]
locked = true
on_info = {+lx8_door_unlocked} ph_door@closed %=play_snd(device\door_servomotor)%

[ph_door@locked1]
locked = true
tips = block_door

[ph_door@closed]
closed = true
locked = false
on_use = ph_door@open
on_info = {-lx8_door_unlocked} ph_door@locked
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop

[ph_door@open]
closed = false
locked = false
on_use = ph_door@closed
on_info = {-lx8_door_unlocked} ph_door@locked %=play_snd(device\door_servomotor)%
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop