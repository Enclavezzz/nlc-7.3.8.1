[logic]
active = walker@start
on_death = death

[walker@start]
path_walk = pesh_botan_start_walk
path_look = pesh_botan_start_look
on_info = {+pesh_prison_gg_info} walker@dialog
meet = no_meet
danger = danger_condition
show_spot = false

[walker@dialog]
path_walk = pesh_botan_dialog_walk
path_look = pesh_botan_dialog_look
meet = meet@pesh_botan
on_info = {+pesh_botan_first_new_gg} walker@done
danger = danger_condition
show_spot = false

[walker@done]
path_walk = pesh_botan_start_walk
path_look = pesh_botan_start_look
on_timer = 15000 | %+pesh_botan_out%
meet = no_meet
danger = danger_condition
show_spot = false

[meet@pesh_botan]
meet_state = 2|wait
meet_state_wpn = 5|wait
victim 			= 2 | actor
victim_wpn 		= 5 | actor
use			= true
use_wpn		= true
abuse       = false
meet_dialog	= pesh_botan_first_dialog

[death]
on_info = %+pesh_botan_umer%