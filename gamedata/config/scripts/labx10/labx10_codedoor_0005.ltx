[logic]
active = ph_door@locked

[ph_door@locked]
locked = true
on_info = {+labx10_code_door5_unlocked} ph_door@closed %=play_snd(device\door_servomotor)%

[ph_door@closed]
closed = true
locked = false
on_use = ph_door@open
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_timer = 5000 | ph_door@locked %-labx10_code_door5_unlocked =play_snd(device\door_locked)%

[ph_door@open]
closed = false
locked = false
on_use = ph_door@closed
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_timer = 5000 | ph_door@locked %-labx10_code_door5_unlocked =play_snd(device\door_servomotor)%