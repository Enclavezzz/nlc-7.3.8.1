[logic]
active = ph_button@stop

[ph_button@stop]
anim = br_off_no_kay
on_info = {+x12_pump_on} ph_button@on_tmbl

[ph_button@on_tmbl]
anim = br_run
on_timer = 1000 | ph_button@on_tmbl_stop %=play_snd(device\power_switch)%

[ph_button@on_tmbl_stop]
anim = br_on
on_timer = 1000 | ph_button@pult_on %=play_snd_from_obj(3160:ambient\transformer_hum1) =turn_off(3162) =turn_on(3161) =sak.restore_weap()%

[ph_button@pult_on]
anim = br_on
