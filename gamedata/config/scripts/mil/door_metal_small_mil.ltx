[logic]
active = ph_door@locked

[ph_door@locked]
locked = true
closed = true
snd_open_start = metal_small_open
snd_close_start = metal_small_close_start
snd_close_stop = metal_small_close_stop
on_info = {+open_mil_seif} ph_door@open
hit_on_bone = 2|ph_door@close %=sak.set_gulag_freedom_enemy_actor()%

[ph_door@close]
locked = false
closed = true
snd_open_start = metal_small_open
snd_close_start = metal_small_close_start
snd_close_stop = metal_small_close_stop
on_use = ph_door@open
on_info = {+closed_mil_seif} ph_door@locked
hit_on_bone = 1|ph_door@free|2|ph_door@free  %=sak.set_gulag_freedom_enemy_actor()%

[ph_door@open]
locked = false
closed = false
snd_open_start = metal_small_open
snd_close_start = metal_small_close_start
snd_close_stop = metal_small_close_stop
on_use = ph_door@close
on_info = {+closed_mil_seif} ph_door@locked
hit_on_bone = 1|ph_door@free|2|ph_door@free  %=sak.set_gulag_freedom_enemy_actor()%

[ph_door@free]
locked = false
closed = true
no_force = true
on_use = ph_door@open