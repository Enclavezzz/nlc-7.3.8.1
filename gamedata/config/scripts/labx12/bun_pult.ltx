[logic]
active = ph_button@stop

[ph_button@stop]
anim = pult_off
on_info = {+bun_pult_on} ph_button@on_tmbl

[ph_button@on_tmbl]
anim = pult_vkl
on_timer = 1000 | ph_button@on_tmbl_stop %+radar_on =play_snd(device\power_switch) =sak.x12_beton_add()%

[ph_button@on_tmbl_stop]
anim = pult_vkl_stop
on_timer = 1000 | ph_button@pult_on %=play_snd_from_obj(3160:ambient\transformer_hum1) =turn_off(3162) =turn_on(3161) =sak.restore_weap()%

[ph_button@pult_on]
anim = pult_on
on_info = {+bun_pult_off} ph_button@off_tmbl

[ph_button@off_tmbl]
anim = pult_otkl
on_timer = 1000 | ph_button@off_tmbl_stop %-radar_on  =play_snd(device\power_switch)%

[ph_button@off_tmbl_stop]
anim = pult_otkl_stop
on_timer = 1000 | ph_button@stop %=stop_play_snd_from_obj(3160:ambient\transformer_hum1) =turn_off(3161) =turn_on(3162) =sak.restore_weap()%